<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />

    <TextView
        android:id="@+id/expenseText"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/montserrat"
        android:text="Register Expense"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expenseButton" />

    <TextView
        android:id="@+id/incomeText"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_marginEnd="28dp"
        android:fontFamily="@font/montserrat"
        android:text="Register Income"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/incomeButton" />

    <TextView
        android:id="@+id/transferText"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Transfer to Card"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/transferToCardButton" />

    <ImageButton
        android:id="@+id/expenseButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_expense"
        android:onClick="goToExpense"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/transferToCardButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/ic_transfer"
        android:onClick="openTransferDialogue"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/incomeButton"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/ic_income"
        android:onClick="goToIncome"
        app:layout_constraintBottom_toTopOf="@+id/navigation"
        app:layout_constraintEnd_toEndOf="parent" />

    <android.support.v4.view.ViewPager
        android:id="@+id/typeSelector"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="60dp"
        app:layout_constraintBottom_toTopOf="@+id/transferToCardButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
